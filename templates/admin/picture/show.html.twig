{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Image
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ picture.id }}</td>
                <td>
                    <figure class="image is-square is-fullwidth">
                        <img src="\uploads\pictures\{{ picture.fileName }}" alt="">
